<div id="work-order-form-wrapper" class="d-flex flex-column justify-content-center align-items-center">
    <h5>Welcome back, {{data.name}}</h5>
    <h2>Submit a Work Order</h2>
    <form id="work-order-form" class="d-flex flex-column">
        <div class="form-group">
            <label for="priority-input">Priority</label>
            <select id="priority-input" class="form-control">
                <option value="high">High</option>
                <option value="medium">Medium</option>
                <option value="low">Low</option>
            </select>
        </div>
        <div class="form-group">
            <label for="category-input">Category</label>
            <select id="category-input" class="form-control">
                {{> workOrderCategoryOptions}}
            </select>
        </div>
        <div class="form-group">
            <label
                for="description-input"
                class="col col-form-label"
            >Description</label>
            <div class="row">
                <textarea rows="4" class="form-control" id="description-input" required></textarea>
            </div>
        </div>
        <div class="form-group">
        
        </div>
        <button type="submit" class="btn btn-primary align-self-center">Create Request</button>              
    </form>
</div>