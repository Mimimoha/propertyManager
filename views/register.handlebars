
<section id="dashboard-container" class="d-flex flex-column justify-content-center align-items-md-center">
  <section id="register-container"
    class="row col-sm-12 col-md-3 d-flex flex-column justify-content-center align-items-center">
    <div id="register-wrapper" class="d-flex flex-column justify-content-center align-items-center">
      <div class="card text-center">
        <div class="card-header">
          <h2>New User Registration</h2>
          <div class="card-body">
            <form class="register-form">
              <label>Name:</label>
              <input id="name-register" type="text" />
              <label>Email:</label>
              <input id="email-register"type="text" />
              <label for="password-register">Password:</label>
              <input class="form-input" type="password" id="password-register" />
              <button type="submit" class="btn btn-primary register-btn">Login</button>
            </form>
          </div>
        </div>
      </div>
  </section>
</section>

<script src="./js/register.js"></script>